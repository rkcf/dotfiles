# take screenshot and pipe to ix.io
bindsym $mod+s exec maim -s |& curl -F 'file=@-' 0x0.st | xclip -i

# dynamic man lookup
bindsym $mod+m exec ls /usr/share/man/man1/ | awk -F '.' '{print $1}' | $launcher -l 10 | xargs $term --class popup man
for_window [class="popup"] floating enable
for_window [class="popup"] resize set 950 800
for_window [class="popup"] move position mouse

# URL plumber
bindsym $mod+o exec xclip -o -selection c | xargs plumber
bindsym $mod+Shift+o exec xclip -o -selection p | xargs plumber
